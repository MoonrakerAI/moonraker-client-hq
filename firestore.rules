rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /invoices/{invoiceId} {
      // Allow anyone to read an invoice (for client-facing payment pages)
      allow read: if true;
      
      // Allow admin actions (ideally restricted by auth, but for now open for testing)
      allow write: if true;
    }
  }
}
